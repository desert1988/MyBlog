                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <!--Commented code used in tests before -->
                    <!--<div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author name">                
                    </div>-->
