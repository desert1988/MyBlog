<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add new Comment to <%= place.name %></h1>
            <div style="width: 30%; margin: 30 auto;">
                <form action="/places/<%= place._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Type comment here">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author name">                
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Add comment</button>
                    </div>
                </form>
                <a href="/places">Back to Places</a>
            </div>
       
        </div>
    </div>
<% include ../partials/footer %>